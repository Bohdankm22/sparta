This directory is deleted in release_cleanup.xml

Making a release
================
export RELEASE=`pwd`
cd $RELEASE
hg clone https://dada.cs.washington.edu/hgweb/sparta-code sparta-toolset-v1.0.0-source
cd sparta-toolset-v1.0.0-source

//Update the version number of SPARTA and CF:
vi build.properties docs/manual.tex website/release/index.html website/index.html
vi changelog-sparta.txt

hg commit -m "Updated to v1.0.0"
hg tag sparta-1.0.0
hg push

ant jar 
cd docs; make ;cd ..

cp sparta.jar ../
cp docs/manual.html ../
cp docs/manual.pdf ../
cp docs/manual*.png ../
cp website/release/index.html ../
cp website/index.html ../main.html
cp build.include.xml ../

ant -buildfile release-cleanup.xml clean -DspartaDir=.

cd ../
tar -czf sparta-toolset-1.0.0-source.tgz sparta-toolset-v1.0.0-source/

rm -r sparta-toolset-v1.0.0-source/
mkdir sparta-toolset-v1.0.0/

cp sparta-1.0.0.jar sparta-toolset-v1.0.0/
cp build.include.xml sparta-toolset-v1.0.0/
cp manual.html sparta-toolset-v1.0.0/
cp manual.pdf sparta-toolset-v1.0.0/
cp *.png sparta-toolset-v1.0.0/
tar -czf sparta-toolset-1.0.0.tgz sparta-toolset-v1.0.0/
rm -r sparta-toolset-v1.0.0/

//Prepare sparta-sample-apps
cd $RELEASE
hg clone https://dada.cs.washington.edu/hgweb/sparta-sample-apps sparta-sample-apps-v1.0.0

cd sparta-sample-apps-v1.0.0
ant -buildfile release-cleanup.xml clean -DsubjectsDir=.
rm release-cleanup.xm;
cd ../
tar -czf sparta-sample-apps-1.0.0.tgz sparta-sample-apps-v1.0.0
rm -r sparta-sample-apps-v1.0.0/
tar -czf release-v1.0.0.tgz *

#Copy to server
ssh buffalo
mkdir /cse/www2/types/sparta/release/versions/v1.0.0

#local machine
scp release* buffalo:/cse/www2/types/sparta/release/versions/v1.0.0

#buffalo
cd /cse/www2/types/sparta/release/versions/v1.0.0
tar -xzf release-v1.0.0.tgz
rm release-v1.0.0.tgz
mv index.html ../../
mv main.html ../../../index.html
chmod 775 .
chmod 664 *

cd ../../../
rm -r current
mkdir current
cd current/
ln -s ../release/versions/v1.0.0/sparta-toolset-1.0.0.tgz sparta-toolset.tgz
ln -s ../release/versions/v1.0.0/sparta-sample-apps-1.0.0.tgz sparta-sample-apps.tgz
ln -s ../release/versions/v1.0.0/manual.pdf sparta-manual.pdf
ln -s ../release/versions/v1.0.0/manual.html sparta-manual.html
ln -s ../release/versions/v1.0.0/manual001.png .
ln -s ../release/versions/v1.0.0/manual002.png .
ln -s ../release/versions/v1.0.0/manual003.png .
ln -s ../release/versions/v1.0.0/manual004.png .
ln -s ../release/versions/v1.0.0/sparta-vm-v1.0.0.tar.bz2 sparta-vm.tar.bz2

#Local: check links
export pl=/Users/smillst/src/plume-lib/
export PERLLIB=/Users/smillst/perl5/lib/perl5/
export PERL5LIB=/Users/smillst/perl5/lib/perl5/
$pl/bin/checklink -q -r `grep -v '^#' $pl/bin/checklink-args.txt` http://types.cs.washington.edu/sparta/

#Check against released CF:
export CF_RELEASE=$HOME/cf-release/
cd $CF_RELEASE
wget http://types.cs.washington.edu/checker-framework/current/checker-framework.zip
wget http://types.cs.washington.edu/sparta/current/sparta-toolset.tgz
wget http://types.cs.washington.edu/sparta/current/sparta-sample-apps.tgz
tar -xzf sparta-sample-apps.tgz
tar -xzf sparta-toolset.tgz
tar -xzf checker-framework.zip

export CHECKERFRAMEWORK=$CF_RELEASE/checker-framework-1.8.9/
export SPARTA_CODE=$CF_RELEASE/sparta-toolset-v1.0.0/
cd sparta-sample-apps-v1.0.0/Pedometer/
ant all-tests




 # cp website/release/index.html /cse/www2/types/sparta/release/
 * Check to make sure everything looks reasonable, the links, work, etc:
   http://types.cs.washington.edu/sparta/
   http://types.cs.washington.edu/sparta/release/
 * Send mail to sparta-users@cs.washington.edu announcing the release.


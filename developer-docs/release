This directory is deleted in release_cleanup.xml

Making a release
================
export RELEASE=â€¦
cd $RELEASE
hg clone https://dada.cs.washington.edu/hgweb/sparta-code sparta-toolset-v0.9.9
cd sparta-toolset-v0.9.9

//Update the version number of SPARTA and CF:
vi build.properties docs/manual.tex website/release/index.html website/index.html
vi changelog-sparta.txt

hg commit -m "Updated to v0.9.9"
hg tag sparta-0.9.9
hg push

ant jar 
cd docs; make ;cd ..

cp sparta.jar ../sparta-0.9.9.jar
cp docs/manual.html ../
cp docs/manual.pdf ../
cp docs/manual*.png ../
cp website/release/index.html ../
cp website/index.html ../main.html
cp build.include.xml ../

ant -buildfile release-cleanup.xml clean -DspartaDir=.

cd ../
tar -czf sparta-toolset-0.9.9-source.tgz sparta-toolset-v0.9.9/

rm -r sparta-toolset-v0.9.9/*
cp sparta-0.9.9.jar sparta-toolset-v0.9.9/
cp build.include.xml sparta-toolset-v0.9.9/
tar -czf sparta-toolset-0.9.9.tgz sparta-toolset-v0.9.9/

//Prepare sparta-sample-apps
cd $RELEASE
hg clone https://dada.cs.washington.edu/hgweb/sparta-sample-apps sparta-sample-apps-v0.9.9

cd sparta-sample-apps-v0.9.9
ant -buildfile release-cleanup.xml clean -DsubjectsDir=.
cd ../
tar -czf sparta-sample-apps-0.9.9.tgz sparta-sample-apps-v0.9.9
rm -r sparta-sample-apps-v0.9.9/
rm -r sparta-toolset-v0.9.9/
tar -czf release-v0.9.9.tgz *

#Copy to server
ssh buffalo
mkdir /cse/www2/types/sparta/release/versions/v0.9.9
#local machine
scp release* buffalo:/cse/www2/types/sparta/release/versions/v0.9.9
#buffalo
cd /cse/www2/types/sparta/release/versions/v0.9.9
tar -xzf release-v0.9.9.tgz
mv index.html ../../
mv main.html ../../../index.html
chmod 775 .
chmod 664 *

cd ../../../
rm -r current
mkdir current
cd current/
ln -s ../release/versions/v0.9.9/sparta-toolset-0.9.9.tgz sparta-toolset.tgz
ln -s ../release/versions/v0.9.9/sparta-sample-apps-0.9.9.tgz sparta-sample-apps.tgz
ln -s ../release/versions/v0.9.9/manual.pdf sparta-manual.pdf
ln -s ../release/versions/v0.9.9/manual.html sparta-manual.html
ln -s ../release/versions/v0.9.9/manual001.png .
ln -s ../release/versions/v0.9.9/manual002.png .
ln -s ../release/versions/v0.9.9/manual003.png .
ln -s ../release/versions/v0.9.9/manual004.png .
ln -s ../release/versions/v0.9.9/sparta-vm-v0.9.9.tar.bz2 sparta-vm.tar.bz2

export PERLLIB=/Users/smillst/perl5/lib/perl5/
export PERL5LIB=/Users/smillst/perl5/lib/perl5/
$pl/bin/checklink -q -r `grep -v '^#' $pl/bin/checklink-args.txt` http://types.cs.washington.edu/sparta/


 # cp website/release/index.html /cse/www2/types/sparta/release/

<?xml version="1.0" encoding="UTF-8"?>
<project name="android-setup" default="flowchecker-setup">
    <property environment="env"/>

    <target name="flowchecker-setup">
        <exec executable="${env.ANDROID_HOME}/tools/android">
            <arg value="update" />
            <arg value="project" />
            <arg value="-p" />
            <arg value="${env.PWD}" />
        </exec>
    </target>
</project>
